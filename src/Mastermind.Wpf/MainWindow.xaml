<Window x:Class="Mastermind.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mastermind" Width="900" Height="600" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Menu">
                <MenuItem Header="{DynamicResource Menu_NewGame}"   Command="{Binding NytSpilCmd}" />
                <Separator/>
                <MenuItem Header="{DynamicResource Menu_Options}"    Command="{Binding OptionsCmd}" />
                <MenuItem Header="{DynamicResource Menu_Statistics}"  Command="{Binding StatistikCmd}" />
                <Separator/>
                <MenuItem Header="{DynamicResource Menu_Exit}"       Command="{Binding ExitCmd}" />
            </MenuItem>
        </Menu>
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
