<UserControl x:Class="Mastermind.Wpf.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Mastermind" FontSize="22" FontWeight="Bold"/>

    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,20,0,0" Width="420">
      <TextBlock Text="Vælg 4 farver og tryk Gæt:" Margin="0,0,0,8"/>
      <UniformGrid Columns="4" Margin="0,0,0,8">
        <ComboBox ItemsSource="{Binding Palette}" SelectedItem="{Binding Guess0}"/>
        <ComboBox ItemsSource="{Binding Palette}" SelectedItem="{Binding Guess1}"/>
        <ComboBox ItemsSource="{Binding Palette}" SelectedItem="{Binding Guess2}"/>
        <ComboBox ItemsSource="{Binding Palette}" SelectedItem="{Binding Guess3}"/>
      </UniformGrid>
      <StackPanel Orientation="Horizontal">
  <Button Content="Gæt" Width="120" Command="{Binding GaetCmd}" Margin="0,0,8,0"/>
  <Button Content="Ny runde" Width="120" Command="{Binding NyRundeCmd}"/>
</StackPanel>

      <ListBox ItemsSource="{Binding History}" Margin="0,12,0,0"/>
    </StackPanel>

    <TextBlock Grid.Row="2" Text="{Binding Footer}" FontStyle="Italic" />
  </Grid>
</UserControl>
