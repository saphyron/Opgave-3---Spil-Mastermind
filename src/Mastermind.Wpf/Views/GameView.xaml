<UserControl x:Class="Mastermind.Wpf.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Margin="32">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="{DynamicResource Game_Title}" FontSize="24" FontWeight="Bold"/>

    <Grid Grid.Row="1" Margin="0,24,0,0" MaxWidth="720">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0" Text="{DynamicResource Game_Prompt}" Margin="0,0,0,12" FontSize="14"/>

      <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,12">
        <ComboBox ItemsSource="{Binding Palette}" SelectedItem="{Binding Guess0}" FontSize="14" MinWidth="140"/>
        <ComboBox ItemsSource="{Binding Palette}" SelectedItem="{Binding Guess1}" FontSize="14" MinWidth="140"/>
        <ComboBox ItemsSource="{Binding Palette}" SelectedItem="{Binding Guess2}" FontSize="14" MinWidth="140"/>
        <ComboBox ItemsSource="{Binding Palette}" SelectedItem="{Binding Guess3}" FontSize="14" MinWidth="140"/>
      </UniformGrid>

      <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
        <Button Content="{DynamicResource Game_Button_Guess}" Width="140" Command="{Binding GaetCmd}" Margin="0,0,12,0"/>
<Button Content="{DynamicResource Game_Button_NewRound}" Width="140" Command="{Binding NyRundeCmd}"/>
      </StackPanel>

      <ListBox Grid.Row="3" ItemsSource="{Binding History}" FontSize="14" />
    </Grid>

    <!-- Footer/status â€“ viser stats/secret efter runden -->
    <TextBlock Grid.Row="2"
               Text="{Binding Footer}"
               FontStyle="Italic"
               FontSize="13"
               TextWrapping="Wrap"
               Margin="0,8,0,0"/>
  </Grid>
</UserControl>
