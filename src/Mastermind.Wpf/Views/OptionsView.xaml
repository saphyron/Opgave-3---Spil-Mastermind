<UserControl x:Class="Mastermind.Wpf.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Margin="20" Width="360">
    <TextBlock Text="Options" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

    <StackPanel Orientation="Horizontal" Margin="0,6">
      <TextBlock Text="Kode-længde:" Width="160"/>
      <TextBox Text="{Binding Længde}" Width="80"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="0,6">
      <TextBlock Text="Maks. forsøg:" Width="160"/>
      <TextBox Text="{Binding MaxForsøg}" Width="80"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="0,6">
      <TextBlock Text="Vis Emojis:" Width="160"/>
      <CheckBox IsChecked="{Binding ShowEmojis}"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="0,6">
      <TextBlock Text="Sprog:" Width="160"/>
      <ComboBox SelectedItem="{Binding SprogValg}">
        <ComboBoxItem Content="Dansk" Tag="Da"/>
        <ComboBoxItem Content="English" Tag="En"/>
      </ComboBox>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
      <Button Content="Gem" Width="120" Margin="0,0,10,0" Command="{Binding SaveCmd}"/>
      <Button Content="Genindlæs" Width="120" Command="{Binding ReloadCmd}"/>
    </StackPanel>
  </StackPanel>
</UserControl>
