<UserControl x:Class="Mastermind.Wpf.Views.StatistikView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Margin="32">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Orientation="Horizontal">
      <Button Content="{DynamicResource Stats_Reset}" Width="160" Height="36" Margin="0,0,12,0" Command="{Binding ResetCmd}"/>
      <Button Content="{DynamicResource Stats_Refresh}" Width="140" Height="36" Command="{Binding RefreshCmd}"/>
    </StackPanel>

    <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Padding="12">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <TextBlock Text="{Binding Table, Mode=OneWay}"
                   FontFamily="Consolas"
                   FontSize="16"
                   TextWrapping="NoWrap"/>
      </ScrollViewer>
    </Border>
  </Grid>
</UserControl>
